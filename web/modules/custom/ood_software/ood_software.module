/**
 * Implements hook_form_alter().
 */
function ood_software_form_alter(array &$form, FormStateInterface $form_state, $form_id) {
  // Alter the node edit form for 'software' content type.
  if ($form_id === 'node_appverse_app_edit_form' || $form_id === 'node_appverse_app_form') {
    $form['field_appverse_github_url']['widget'][0]['uri']['#placeholder'] = 'https://github.com/organization/repo';
    unset($form['field_appverse_github_url']['widget'][0]['uri']['#description']);

    // Add prefix/suffix to make the fieldset ajax-replaceable.
    $form['group_github']['#prefix'] = '<div id="edit-group-github">';
    $form['group_github']['#suffix'] = '</div>';

    $form['group_github']['lookup_button'] = [
      '#type' => 'button',
      '#value' => t('Fetch Repo'),
      '#limit_validation_errors' => array(),
      '#weight' => 12,
      '#attributes' => [
        'class' => [
          'ml-0'
        ],
      ],
      '#ajax' => [
        'callback' => 'ood_software_fetch_github_data',
        'wrapper' => 'edit-group-github',
      ],
    ];

    $form['actions']['submit']['#submit'][] = 'ood_software__edit_submit';
  }
}

/**
 * Ajax call to pull in Github data.
 */
function ood_software_fetch_github_data(array &$form, FormStateInterface $form_state) {
  $repo = $form_state->getValue('field_appverse_github_url')[0]['uri'];
  // $repo should be a github repo and I need to pull out the organization/repo part.
  $parsed_url = parse_url($repo);
  if (isset($parsed_url['host']) && $parsed_url['host'] === 'github.com') {
    $path_parts = explode('/', trim($parsed_url['path'], '/'));
    if (count($path_parts) >= 2) {
      $organization = $path_parts[0];
      $repository = $path_parts[1];
      $owner = $organization;
      $name = $repository;
    }
    else {
      // Invalid GitHub URL format.
      \Drupal::messenger()->addError(t('Invalid GitHub repository URL. Please enter a valid URL.'));
      return $form['group_github'];
    }
  }
  else {
    // Not a GitHub URL.
    \Drupal::messenger()->addError(t('The URL provided is not a valid GitHub repository URL.'));
    return $form['group_github'];
  }

  $client = \Drupal::httpClient();

  $token = \Drupal::service('key.repository')->getKey('appverse_github')->getKeyValue();


  $query = <<<'GRAPHQL'
  query($owner: String!, $name: String!) {
    repository(owner: $owner, name: $name) {
      isArchived
      stargazerCount
      forkCount
      pushedAt
      defaultBranchRef {
        name
        target {
          ... on Commit {
            committedDate
          }
        }
      }
      manifestYml: object(expression: "HEAD:manifest.yml") {
        ... on Blob { text }
      }
      appverseYml: object(expression: "HEAD:appverse.yml") {
        ... on Blob { text }
      }
      readme: object(expression: "HEAD:README.md") {
        ... on Blob { text }
      }
      licenseInfo {
        name
        spdxId
      }
      releases(first: 5, orderBy: {field: CREATED_AT, direction: DESC}) {
        nodes {
          tagName
          publishedAt
        }
      }
    }
  }
  GRAPHQL;

  $client = new \GuzzleHttp\Client();

  $response = $client->post('https://api.github.com/graphql', [
    'headers' => [
      'Authorization' => 'Bearer ' . $token,
      'Content-Type' => 'application/json',
    ],
    'json' => [
      'query' => $query,
      'variables' => [
        'owner' => $owner,
        'name' => $name,
      ],
    ],
  ]);

  $data = json_decode($response->getBody(), true);

  // Access the data
  $repo = $data['data']['repository'];
  $manifest_text = $data['data']['repository']['manifestYml']['text'] ?? null;  // Plain text, not base64
  $manifest_decoded = Yaml::decode($manifest_text);
  $isArchived = $data['data']['repository']['isArchived'];
  $stars = $data['data']['repository']['stargazerCount'];
  $readme = $data['data']['repository']['readme']['text'] ?? null;

  // Set the form state value for organization.
  //$form_state->setValue('organization', [['value' => $repo]]);
  $form_state->setValue('body', [['value' => $manifest_decoded['description']]]);
  $form_state->setValue('field_appverse_readme', [['value' => $readme]]);
  $form_state->setValue('title', [['value' => $manifest_decoded['name']]]);

  // Also update the form element to reflect the change.
  //$form['organization']['widget'][0]['value']['#value'] = $repo;
  $form['body']['widget'][0]['value']['#value'] = $manifest_decoded['description'];
  $form['title']['widget'][0]['value']['#value'] = $manifest_decoded['name'];
  $form['field_appverse_readme']['widget'][0]['value']['#value'] = $readme;

  return $form['group_github'];
}

