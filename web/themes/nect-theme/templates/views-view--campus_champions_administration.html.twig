{% set escdiv = 'div' %}
{% autoescape 'div' %}{% apply spaceless %}
{%- if rows -%}
<div><iframe id="session-frame" scrolling="yes" src="/connectci/cc/cc-login.php?{% autoescape 'div' %}{% apply spaceless %}{{- rows -}}{% endapply %}{% endautoescape %}" style="border:none" width="100%" height="10000" data-hj-allow-iframe></iframe></div>
{#
<script type="text/javascript">(function() {
var iframe = document.getElementById('session-frame');
function resizeCrossDomainIframe() {
  var iframe = document.getElementById('session-frame');
  window.addEventListener('message', function(event) {
    if (isNaN(event.data)) return;
    var height = parseInt(event.data) + 20;
    iframe.height = height + "px";
  }, false);
}
iframe.addEventListener("load", resizeCrossDomainIframe);
window.addEventListener("message", function(e) {
  if (e.data === "reload") {
    window.location.reload();
  }
});
})();
</script>
#}
<script src="https://cdnjs.cloudflare.com/ajax/libs/iframe-resizer/4.3.1/iframeResizer.min.js"></script>
<script>
  iFrameResize({ log: true, checkOrigin:false, inPageLinks: true }, '#session-frame')
</script>

